<% if !Setting.first.present? || !Setting.first.app_api_key.present? %>
  <% if admin_signed_in? %>
    <% flash[:alert] = "No API key found. Go to Manage > Setting to add one." %>
  <% end %>
<% end %>

<% if alert %>
  <div data-alert class="alert-box alert">
    <%= alert %>
    <a href="#" class="close">&times;</a>
  </div>
<% end %>

<% if notice %>
  <div data-alert class="alert-box info">
    <%= notice %>
    <a href="#" class="close">&times;</a>
  </div>
<% end %>
